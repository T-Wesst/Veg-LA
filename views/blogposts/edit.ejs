<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;">Edit <%= blogpost.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogposts/<%= blogpost._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= blogpost.title %>" name="blogpost[title]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%=blogpost.price %>" name="blogpost[price]" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= blogpost.image %>" name="blogpost[image]">
                </div>
                <div class="form-group">
                    <textarea name="blogpost[body]" class="form-control" rows="8" cols="80"><%= blogpost.body %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/blogposts">go back</a>
        </div>
    </div>

<% include ../partials/footer %>
