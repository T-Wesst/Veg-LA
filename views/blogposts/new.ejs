<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;">create a new blogposts</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogposts" method="POST">
                <div class="form-group">
                    <label>Title</label>
                    <input class="form-control" type="text" placeholder="title" name="title" required>
                </div>
                <div class="form-group">
                    <label>Price</label>
                    <input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01" required>
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <input class="form-control" type="text" placeholder="image url" name="image" required>
                </div>
                <div class="form-group">
                    <label>Text</label>
                    <textarea name="body" class="form-control" type="text" placeholder="body" rows="8" cols="80" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/blogposts">go back</a>
        </div>
    </div>

<% include ../partials/footer %>
