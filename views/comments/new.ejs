<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;">Add New Comment to <%= blogpost.title %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/blogposts/<%= blogpost._id %>/comments" method="POST">
                <div class="form-group">
                    <textarea name="comment[text]" type="text" placeholder="text" class="form-control" rows="8" cols="80" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/blogposts">go back</a>
        </div>
    </div>

<% include ../partials/footer %>
